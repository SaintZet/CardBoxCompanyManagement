<Window x:Class="CardBoxCompanyManagement.View.DeleteCompanyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:CardBoxCompanyManagement.Application.View.UserControls"
        mc:Ignorable="d"
        x:Name="this"
        Title="Delete Company"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource DefaultPopupWindowStyle}">

    <controls:DefaultCRUDPopup ActionButtonContent="Delete"
                               ActionButtonCommand="{Binding ButtonIsEnabledCommand}"
                               ActionButtonCommandParameter="{Binding ElementName=this }" />
</Window>